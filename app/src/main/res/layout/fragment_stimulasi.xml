<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".stimulasi">

    <ImageView
        android:id="@+id/stimulate_pic"
        android:layout_width="415dp"
        android:layout_height="354dp"
        android:src="@drawable/stimulatedesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrback"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/stimulate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="Touch Babies hand gently"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stimulate_pic"/>

    <ImageView
        android:id="@+id/timer_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@id/stimulate_title"
        app:layout_constraintTop_toBottomOf="@id/stimulate_title"
        app:srcCompat="@drawable/ic_timer"/>

    <TextView
        android:id="@+id/minutes_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="10 minutes"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/timer_icon"
        app:layout_constraintTop_toTopOf="@id/timer_icon"/>

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Instruction"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/stimulate_title"
        app:layout_constraintTop_toBottomOf="@+id/timer_icon"/>

    <ImageView
        android:id="@+id/no_satu"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/instruction"
        app:layout_constraintTop_toBottomOf="@id/instruction"
        app:srcCompat="@drawable/nosatu"/>

    <TextView
        android:id="@+id/instruksi_satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Lorem ipsum dolor sit amet consectetur."
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/no_satu"
        app:layout_constraintTop_toTopOf="@id/no_satu"/>

    <ImageView
        android:id="@+id/no_dua"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/no_satu"
        app:layout_constraintTop_toBottomOf="@id/no_satu"
        app:srcCompat="@drawable/nodua"/>

    <TextView
        android:id="@+id/instruksi_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Tristique duis mattis vel amet proin."
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/no_dua"
        app:layout_constraintTop_toTopOf="@id/no_dua"/>

    <ImageView
        android:id="@+id/no_tiga"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/no_dua"
        app:layout_constraintTop_toBottomOf="@id/no_dua"
        app:srcCompat="@drawable/notiga"/>

    <TextView
        android:id="@+id/instruksi_tiga"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:text="Eu pretium nunc suscipit malesuada. Nunc cum aliquet eget risus vulputate."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/no_tiga"
        app:layout_constraintTop_toTopOf="@id/no_tiga" />

    <Button
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="#696CAB"
        android:text="Successful Stimulation"
        app:layout_constraintEnd_toEndOf="@+id/minutes_icon"
        app:layout_constraintStart_toStartOf="@id/no_tiga"
        app:layout_constraintTop_toBottomOf="@id/instruksi_tiga" />

</androidx.constraintlayout.widget.ConstraintLayout>